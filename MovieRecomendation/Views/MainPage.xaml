<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieRecomendation.MainPage">

    <StackLayout BackgroundColor="#181818">

        <Label Text="Dzisiaj polecamy" FontSize="Title" FontAttributes="Bold" TextColor="AliceBlue" HorizontalTextAlignment="Center"
               Margin="0, 40, 0, 0" />

        <StackLayout Margin="0, 0, 0, 0" Padding="50">

            <Label x:Name="movieTitle" FontSize="Subtitle" FontAttributes="Bold" TextColor="AliceBlue" HorizontalTextAlignment="Center" />
            <Border Padding="0" Stroke="Transparent" Margin="0, 10, 0, 0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="28"/>
                </Border.StrokeShape>
                <ImageButton x:Name="moviePoster" Clicked="OnClick_SeeDetails"/>
            </Border>

        </StackLayout>

    </StackLayout>
    
</ContentPage>
